{
  "name": "@kie/act-js",
  "version": "1.0.0",
  "type": "module",
  "description": "nodejs wrapper for nektos/act",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    }
  },
  "bin": {
    "act-js": "bin/act"
  },
  "files": [
    "bin",
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kiegroup/act-js.git"
  },
  "homepage": "https://github.com/kiegroup/act-js#readme",
  "bugs": {
    "url": "https://github.com/kiegroup/act-js/issues"
  },
  "keywords": [
    "github",
    "github actions",
    "act",
    "nektos/act"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "test": "jest unit/",
    "test:report": "npm test -- --coverage --testResultsProcessor=jest-sonar-reporter",
    "test:integration": "jest integration/",
    "file": "ts-node-esm"
  },
  "author": "Shubh Bapna <sbapna@redhat.com>",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "@kie/mock-github": "^0.0.2",
    "@octokit/rest": "^19.0.5",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "axios": "^1.1.3",
    "eslint": "^8.18.0",
    "jest": "^28.1.1",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "tsc-alias": "^1.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "express": "^4.18.1"
  },
  "jestSonar": {
    "reportPath": "coverage"
  }
}
